<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
            <pattern>[%yellow(%d{yyyy-MM-dd HH:mm:ss})] [%highlight(%-5level)] [%blue(%thread)] [%blue(%logger{36})]: %msg%n</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>